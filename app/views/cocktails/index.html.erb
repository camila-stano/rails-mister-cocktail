<%= render "shared/navbar" %>

<div class="container mt-5 text-center">
  <h1>Choose your mood</h1>
</div>

<ul>
  <% @cocktails.each do |cocktail| %>
    <div class="card-deck" style="width: 18rem;">
      <div class="card" >
        <div class="card-index">
         <%= cl_image_tag cocktail.photo.key, height: 300, width: 400, crop: :fill, class: "card-img-top" %>
        </div>
        <div class="card-body">
          <h5 class="card-title text-danger"> <%= cocktail.name %> </h5>
          <%= link_to "Recipe", cocktail_path(cocktail)  %>
        </div>
      </div>
    </div>
  <% end %>  
</ul>

