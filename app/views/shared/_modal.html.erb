<div class="modal fade" id="newComment" tabindex="-1" role="dialog" aria-labelledby="newCommentLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="newCommentLabel">New message</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      
      <div class="modal-body ">
        <%= form_for Comment.new, :html => {class:"form-horizontal"} do |f| %>
          <div class="row my-2">
            <div class="col-4 d-flex justify-content-end" style="padding: 2px">
              <span>First name: </span>
            </div>
            <div class="col-6">
              <%=  f.text_field :name, class: "w-100" %> <br />
            </div>
          </div>
          <div class="row my-2">
            <div class="col-4 d-flex justify-content-end" style="padding: 2px">
              <span>Nacionality: </span>
            </div>
            <div class="col-6">
              <%=  f.text_field :nacionality, class: "w-100" %> <br />
            </div>
          </div>
          <div class="row my-2">
            <div class="col-4 d-flex justify-content-end" style="padding: 2px">
              <span>E-mail: </span>
            </div>
            <div class="col-6">
              <%=  f.text_field :email, class: "w-100" %> <br />
            </div>
          </div>
          <div class="row my-2">
            <div class="col-4 d-flex justify-content-end" style="padding: 2px">
              <span>Comment: </span>
            </div>
            <div class="col-6">
              <%=  f.text_area :comment, class: "w-100" %> <br />
            </div>
          </div>
          <%= f.submit class: 'btn btn-primary btn-sm my-3 w-100' %>
        <% end %>
      </div>  
<%# 
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Send message</button>
      </div> %>
    </div>
  </div>
</div>
